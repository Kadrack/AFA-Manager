<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">{% if formData.Member is not null %}{{ formData.Member.getMemberFirstname()|title }} {{ formData.Member.getMemberName()|title }}{% else %}Inscription non membre{% endif %}</h5>
        </div>
        <div class="modal-body text-center">
            {{ form_start(form) }}
            {{ form_widget(form.TrainingAttendanceStatus) }}
            <hr class="mt-1 mb-1" />
            {% if formData.Member is null %}
                {{ form_row(form.TrainingAttendanceName) }}
                {{ form_widget(form.TrainingAttendanceSex) }}
                {{ form_widget(form.TrainingAttendanceCountry) }}
                <hr class="mt-1 mb-1" />
            {% endif %}
            {% if formData.Lessons %}
                {{ form_widget(form.TrainingAttendanceSessions) }}
                <label class="form-check-label"><input id="checkall" class="form-check-input" type="checkbox" onchange="check()" />&nbsp;Tous</label>
                <hr class="mt-1 mb-1" />
            {% endif %}
            {% if formData.Free == false %}
                {{ form_widget(form.TrainingAttendancePayment) }}
                {{ form_widget(form.TrainingAttendancePaymentType) }}
                <hr class="mt-1 mb-1" />
                <h2>Déjà payé : {{ formData.Total }}</h2>
            {% else %}
                <h2>Stage Gratuit</h2>
            {% endif %}
                <div class="d-grid gap-0">{{ form_widget(form.Submit) }}{{ form_end(form) }}</div>
        </div>
        {% if formData.Delete %}
        <div class="modal-header">
            <h5 class="modal-title">Suppression</h5>
        </div>
        <div class="modal-body">
            {{ form_start(formDelete) }}
            <div class="d-grid gap-0">{{ form_widget(formDelete.Submit) }}</div>
            {{ form_row(formDelete.Delete) }}
            {{ form_end(formDelete) }}
        </div>
        {% endif %}
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
        </div>
    </div>
</div>