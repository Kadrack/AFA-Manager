{% extends 'base.html.twig' %}

{% block title %}
    AFA-Manager
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <h2>Liste des licences encodées (90 derniers jours)</h2>
    <table class="table table-sm table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Licence n°</th>
            <th scope="col">Club</th>
            <th scope="col">Echéance</th>
            <th scope="col">Encodage Formulaire</th>
            <th scope="col">Paiement</th>
            <th scope="col">Encodage Paiement</th>
            <th scope="col">Complet le</th>
            <th scope="col">Timbre</th>
        </tr>
        </thead>
        <tbody>
        {% for member in list %}
            <tr>
                <td class="align-middle">{{ loop.index }}</td>
                <td class="align-middle">{{ member.Id }}</td>
                <td class="align-middle">{{ member.ClubId }}</td>
                <td class="align-middle">{{ member.Deadline|date("d/m/Y") }}</td>
                <td class="align-middle">{% if member.DateUpdate != null %}{{ member.DateUpdate|date("d/m/Y") }}{% else %}--/--/----{% endif %}</td>
                <td class="align-middle">{% if member.DatePayment != null %}{{ member.DatePayment|date("d/m/Y") }}{% else %}--/--/----{% endif %}</td>
                <td class="align-middle">{% if member.PaymentUpdate != null %}{{ member.PaymentUpdate|date("d/m/Y") }}{% else %}--/--/----{% endif %}</td>
                <td class="align-middle">{% if member.StampCreation != null %}{{ member.StampCreation|date("d/m/Y") }}{% else %}--/--/----{% endif %}</td>
                <td class="align-middle">{% if member.StampPrint != null %}{{ member.StampPrint|date("d/m/Y") }}{% else %}--/--/----{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
{% endblock %}
