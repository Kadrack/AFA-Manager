<thead>
    <tr>
        <th class="text-center" scope="col">Numéro</th>
        <th scope="col">Nom</th>
    </tr>
</thead>
<tbody>
    {% if data.Open and access.check('Club-ListClose') %}
        <tr onclick="load('{{ path('club-listClose') }}', 'clubList')" onmouseover="this.style.cursor='pointer'">
            <td class="align-middle text-center" colspan="2"><button class="btn btn-sm btn-primary" onmouseover="this.style.cursor='pointer'">Voir la liste des clubs fermés</button></td>
        </tr>
    {% elseif not data.Open and access.check('Club-ListOpen') %}
        <tr onclick="load('{{ path('club-listOpen') }}', 'clubList')" onmouseover="this.style.cursor='pointer'">
            <td class="align-middle text-center" colspan="2"><button class="btn btn-sm btn-primary" onmouseover="this.style.cursor='pointer'">Voir la liste des clubs actifs</button></td>
        </tr>
    {% endif %}
    {% for club in data.List %}
        <tr onclick="window.open('{{ path('club-index', {'club': club.getClubId}) }}', '_self')" onmouseover="this.style.cursor='pointer'">
            <td class="align-middle text-center">{{ club.getClubId }}</td>
            <td class="align-middle">{{ club.getClubName }}</td>
        </tr>
    {% endfor %}
</tbody>
