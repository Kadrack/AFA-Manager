<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Modifier un professeur</h5>
        </div>
        <div class="modal-body">
            {{ form_start(formEdit) }}
            {{ form_row(formEdit.ClubTeacherTitle) }}
            {{ form_row(formEdit.ClubTeacherType) }}
            {% if member %}
            <h6 class="text-center">Professeur non membre</h6>
            {{ form_row(formEdit.ClubTeacherFirstname) }}
            {{ form_row(formEdit.ClubTeacherName) }}
            {{ form_row(formEdit.ClubTeacherGrade) }}
            {{ form_row(formEdit.ClubTeacherGradeTitleAikikai) }}
            {{ form_row(formEdit.ClubTeacherGradeTitleAdeps) }}
            {% else %}
            <h6 class="text-center">Professeur membre de l'AFA</h6>
            {{ form_row(formEdit.ClubTeacherMember) }}
            {% endif %}
            <div class="d-grid gap-0">{{ form_widget(formEdit.Submit) }}</div>
            {{ form_end(formEdit) }}
        </div>
        <div class="modal-header">
            <h5 class="modal-title">Suppression</h5>
        </div>
        <div class="modal-body">
            {{ form_start(formDelete) }}
            <div class="d-grid gap-0">{{ form_widget(formDelete.Submit) }}</div>
            {{ form_row(formDelete.Delete) }}
            {{ form_end(formDelete) }}
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
        </div>
    </div>
</div>
